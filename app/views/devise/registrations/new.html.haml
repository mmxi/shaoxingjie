%h2 用户注册

= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :wrapper => :inline, :html => {:class => "new_register"} do |f|
  = f.input :name
  = f.input :email, :placeholder => "test@example.com"
  = f.input :password
  = f.input :password_confirmation
  .actions
    = f.submit "注册", :class => "btn primary"

- content_for :sidebar do
  %h3 已经拥有帐号
  = link_to "登录", user_session_path
